<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codeclan.com.helpers">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.ThingsToDoActivity"
            android:label="@string/things_to_do" />
        <activity
            android:name=".controllers.TaskActivity"
            android:label="Task"
            android:parentActivityName=".controllers.ThingsToDoActivity" />
        <activity android:name=".controllers.AddTaskActivity"></activity>
    </application>

</manifest>